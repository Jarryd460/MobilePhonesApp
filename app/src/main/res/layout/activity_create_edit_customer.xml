<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jarryddeane.zaaccputmobilephonesapp.views.CreateEditCustomer">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name :"
                android:id="@+id/textView1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#010101" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name :"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView1"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignLeft="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView1"
                android:textColor="#010101"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB :"
                android:id="@+id/textView4"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No. :"
                android:id="@+id/textView5"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView1"
                android:textColor="#010101"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home No. :"
                android:id="@+id/textView6"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:textColor="#010101"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password :"
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:textColor="#010101"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:textSize="20dp"
                android:textColor="#010101"
                android:layout_marginTop="20dp"
                android:layout_alignLeft="@+id/textView1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtmobilephonenumber"
                android:layout_toRightOf="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textColor="#010101" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtfirstname"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView1"
                android:textColor="#010101" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtlastname"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:textColor="#010101" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txthomephonenumber"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtusername"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView7"
                android:textColor="#010101" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtpassword"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView8"
                android:textColor="#010101" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:id="@+id/txtaddress"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView9"
                android:textColor="#010101" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listgender"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignTop="@+id/textView3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtdob"
                android:layout_alignLeft="@+id/txtmobilephonenumber"
                android:layout_alignRight="@+id/txtmobilephonenumber"
                android:layout_alignBottom="@+id/textView4"
                android:textColor="#010101"
                android:hint="mm-dd-yyyy" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btncancel"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtaddress"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnsave"
                android:layout_alignParentEnd="false"
                android:layout_alignBottom="@+id/btncancel"
                android:layout_toLeftOf="@+id/btncancel" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
