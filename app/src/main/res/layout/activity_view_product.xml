<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jarryddeane.zaaccputmobilephonesapp.views.ViewProduct">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgpicture"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imgpicture"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:id="@+id/textView2"
                android:textSize="15dp"
                android:textColor="#010101" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer:"
                android:id="@+id/textView3"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_below="@+id/txtname"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:id="@+id/textView4"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtmanufacturer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operating System:"
                android:id="@+id/textView5"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtprice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen size:"
                android:id="@+id/textView6"
                android:layout_below="@+id/txtoperatingsystem"
                android:layout_marginTop="10dp"
                android:textColor="#010101"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch screen:"
                android:id="@+id/textView7"
                android:textSize="15dp"
                android:textColor="#010101"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtscreensize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera:"
                android:id="@+id/textView8"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txttouchscreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory:"
                android:id="@+id/textView9"
                android:layout_below="@+id/txtcamera"
                android:layout_marginTop="10dp"
                android:textColor="#010101"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtname"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#010101" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtmanufacturer"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtprice"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:textColor="#010101"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtoperatingsystem"
                android:textSize="15dp"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtscreensize"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:textColor="#010101"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txttouchscreen"
                android:textSize="15dp"
                android:textColor="#010101"
                android:layout_toRightOf="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtcamera"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:textColor="#010101"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtmemory"
                android:textSize="15dp"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
