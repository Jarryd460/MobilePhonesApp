<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jarryddeane.zaaccputmobilephonesapp.views.CreateEditProduct">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:id="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#010101"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch screen :"
                android:id="@+id/textView16"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView15"
                android:layout_alignLeft="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer :"
                android:id="@+id/textView12"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:textSize="20dp"
                android:textColor="#010101" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory :"
                android:id="@+id/textView18"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView17"
                android:layout_alignLeft="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen size :"
                android:id="@+id/textView15"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView14"
                android:layout_alignLeft="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera :"
                android:id="@+id/textView17"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView16"
                android:layout_alignLeft="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:id="@+id/textView13"
                android:textColor="#010101"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OS :"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:textColor="#010101"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView10"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtname"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtmanufacturer"
                android:layout_alignBottom="@+id/textView12"
                android:textColor="#010101"
                android:layout_toRightOf="@+id/textView12"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtprice"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView13"
                android:inputType="number"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtoperatingsystem"
                android:layout_alignParentEnd="false"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignRight="@+id/txtmanufacturer"
                android:layout_alignLeft="@+id/txtmanufacturer" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtscreensize"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView15"
                android:inputType="number"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtcamera"
                android:textColor="#010101"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer"
                android:layout_alignBottom="@+id/textView17"
                android:inputType="number" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtmemory"
                android:textColor="#010101"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer"
                android:inputType="number" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btncancel"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtmemory" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnsave"
                android:layout_alignBottom="@+id/btncancel"
                android:layout_toLeftOf="@+id/btncancel" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listtouchscreen"
                android:layout_alignTop="@+id/textView16"
                android:layout_alignBottom="@+id/textView16"
                android:layout_alignLeft="@+id/txtmanufacturer"
                android:layout_alignRight="@+id/txtmanufacturer" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
